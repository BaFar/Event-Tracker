<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/event_destination_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="Event Name" />

    <TextView
        android:id="@+id/text_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_destination_name"
        android:layout_marginStart="36dp"
        android:layout_marginTop="20dp"
        android:text="From" />

    <TextView
        android:id="@+id/textTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:layout_above="@+id/event_from_date"
        android:layout_alignStart="@+id/event_to_date" />

    <TextView
        android:id="@+id/event_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Estimated budget"
        android:layout_below="@+id/event_to_date"
        android:layout_centerHorizontal="true"
        android:layout_alignStart="@+id/event_destination_name" />

    <TextView
        android:id="@+id/event_from_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_from"
        android:layout_below="@+id/text_from"
        android:layout_marginTop="27dp"
        android:text="29/09/2017" />

    <TextView
        android:id="@+id/event_to_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08/10/2017"
        android:layout_marginStart="14dp"
        android:layout_alignBottom="@+id/event_from_date"
        android:layout_toEndOf="@+id/event_destination_name" />
</RelativeLayout>