<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.eventtracker.AddEventFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/destinationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:layout_marginTop="44dp"
            android:text="Destination :" />

        <TextView
            android:id="@+id/budgetText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/destinationText"
            android:layout_below="@+id/destinationText"
            android:layout_marginTop="43dp"
            android:text="Budget :" />

        <TextView
            android:id="@+id/fromDateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/budgetText"
            android:layout_below="@+id/budgetText"
            android:layout_marginTop="56dp"
            android:text="Start Date :" />

        <TextView
            android:id="@+id/toDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/fromDateTV"
            android:layout_below="@id/fromDateTV"
            android:layout_marginTop="56dp"
            android:text="To Date:" />

        <EditText
            android:id="@+id/destinationValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/destinationText"
            android:layout_alignBottom="@+id/destinationText"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="23dp"
            android:ems="10"
            android:inputType="text"
            android:text="" />

        <EditText
            android:id="@+id/budgetValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/budgetText"
            android:layout_alignBottom="@+id/budgetText"
            android:layout_alignStart="@+id/destinationValue"
            android:ems="10"
            android:inputType="text"
            android:text="" />

        <Button
            android:id="@+id/fromDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="select"
            android:layout_alignBaseline="@+id/fromDateTV"
            android:layout_alignBottom="@+id/fromDateTV"
            android:layout_alignStart="@+id/toDateValue" />

        <Button
            android:id="@+id/toDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="select"
            android:layout_alignBaseline="@+id/toDateText"
            android:layout_alignBottom="@+id/toDateText"
            android:layout_alignStart="@+id/budgetValue" />

        <Button
            android:id="@+id/eventCreateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toDateValue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            android:text="Create Event"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:onClick="logOut"/>
    </RelativeLayout>

</FrameLayout>
